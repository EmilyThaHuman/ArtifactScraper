{
    "name": "api",
    "version": "0.0.1-alpha.3",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "dotenv-run -r ../.. -- tsx watch ./src/index.ts",
        "build": "dotenv-run -r ../.. -- tsc",
        "start": "dotenv-run -r ../.. -- node ./dist/index.js",
        "clean": "rm -rf dist",
        "test": "NODE_OPTIONS=--experimental-vm-modules dotenv-run -r ../.. -- jest --detectOpenHandles --forceExit",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules dotenv-run -r ../.. -- jest --watch --detectOpenHandles",
        "test:coverage": "NODE_OPTIONS=--experimental-vm-modules dotenv-run -r ../.. -- jest --coverage --detectOpenHandles --forceExit",
        "typecheck": "tsc --noEmit",
        "db:generate": "dotenv-run -r ../.. -- drizzle-kit generate",
        "db:migrate": "dotenv-run -r ../.. -- drizzle-kit migrate",
        "db:studio": "dotenv-run -r ../.. -- drizzle-kit studio"
    },
    "dependencies": {
        "@artifactscraper/libs": "workspace:*",
        "@artifactscraper/scrape": "workspace:*",
        "@artifactscraper/search": "workspace:*",
        "@artifactscraper/ai": "workspace:*",
        "@types/pg": "^8.12.0",
        "better-sqlite3": "^11.9.1",
        "body-parser": "^2.2.0",
        "cors": "^2.8.5",
        "drizzle-orm": "^0.43.1",
        "express": "^5.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.15.6",
        "response-time": "^2.3.3",
        "zod": "^3.25.49"
    },
    "devDependencies": {
        "@artifactscraper/typescript-config": "workspace:*",
        "@dotenv-run/cli": "^1.3.6",
        "@jest/globals": "^29.7.0",
        "@types/better-sqlite3": "^7.6.13",
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/morgan": "^1.9.9",
        "@types/response-time": "^2.3.8",
        "@types/supertest": "^6.0.3",
        "drizzle-kit": "^0.31.1",
        "jest": "^29.7.0",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.2",
        "ts-jest-resolver": "^2.0.1"
    }
}
